<header class="header">
	<div class="">
		{{> logo}}
	</div>

	<nav class="header_nav">
		<div class="header_nav_right">
			{{> nav list=header}}
		</div>
	</nav>
</header>

<div class="block_info">
	{{#with info}}
	<div class="info">
		<h1 class="info_title">{{title}}</h1>
		<p class="info_description">{{description}}</p>
	</div>
	{{/with}}

	{{#with form}}
	<form class="form">
		<div class="form_input_list">
			{{#each inputs}}
			<input type="{{type}}" placeholder="{{placeholder}}" class="form_input" name="{{name}}"
				id="form-input-{{id}}">
			{{/each}}
		</div>

		<div class="form_checkbox">
			<input type="checkbox" name="{{checkbox.name}}" id="{{checkbox.name}}">
			<div></div>
			<label for="{{checkbox.name}}">{{checkbox.label}}</label>
		</div>

		<button type="submit" class="form_button">{{button}}</button>
		<p class="form_info">{{info}}</p>
	</form>
	{{/with}}
</div>

<main class="updates">
	{{#with updates}}
	<h6 class="updates_title">{{title}}</h6>

	{{#each list}}
	<div class="updates_content">
		<span>
			<img src="#" alt="32x32" class="updates_image updates_image_{{id}}">
		</span>
		<div class="updates_text">
			<strong class="updates_nickname">{{nickname}}</strong>
			<p class="updates_description">{{description}}</p>
		</div>
	</div>
	{{/each}}

	{{#with show_all}}
	<a href="{{url}}" class="updates_link">{{text}}</a>
	{{/with}}

	{{/with}}
</main>

<div class="experience">
	{{#with experience}}
	<h2 class="experince_title">{{title}}</h2>
	<span class="experience_badge">{{badge}}</span>

	<div class="experience_list">
		{{#each list}}
		<div>
			<strong>{{name}}</strong>
			<p>{{details}}</p>
		</div>
		{{/each}}
	</div>


	{{/with}}
</div>


<footer class="footer">
	<div>
		{{> logo}}
		<span class="footer_copyright">Copyright 2023-2024</span>
	</div>

	{{#each footer}}
	<div>
		<span class="footer_title">{{title}}</span>
		{{> nav list=links isVertical=true}}
	</div>
	{{/each}}
</footer>